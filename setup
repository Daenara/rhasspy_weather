profile=/profiles/de
rhasspy_weather=$(dirname "$(readlink -f "$0")")
python3 $rhasspy_weather/setup.py clean
python3 $rhasspy_weather/setup.py build
python3 $rhasspy_weather/setup.py develop

python3 $rhasspy_weather/rhasspy_weather/generate_slots.py -x
chmod +x $rhasspy_weather/slot_programs/*
mkdir -p $profile/custom_command
ln -s $rhasspy_weather/custom_commands.py $profile/custom_command
slots=slot_programs/rhasspy_weather_slots
mkdir -p $profile/$slots
ln -s $rhasspy_weather/slot_programs/* $profile/$slots